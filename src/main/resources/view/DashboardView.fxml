<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.constructrack.bitacora.controller.DashboardController">
    <top>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <children>
                <Button text="Nuevo Proyecto" onAction="#handleNuevoProyecto" />
                <Button text="Editar" onAction="#handleEditarProyecto" />
                <Button text="Eliminar" onAction="#handleEliminarProyecto" />
                <Button text="Cerrar sesión" onAction="#handleLogout" />
            </children>
        </HBox>
    </top>
    <center>
        <TableView fx:id="tablaProyectos">
            <columns>
                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="200" />
                <TableColumn fx:id="colUbicacion" text="Ubicación" prefWidth="200" />
                <TableColumn fx:id="colEstado" text="Estado" prefWidth="120" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <children>
                <Button text="Ver Bitácora" onAction="#handleVerBitacora" />
            </children>
        </HBox>
    </bottom>
    
</BorderPane>
